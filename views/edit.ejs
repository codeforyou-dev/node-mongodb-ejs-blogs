<!-- views/edit.ejs -->
<h1>Edit Blog</h1>
<form action="/blogs/edit/<%= blog._id %>" method="post">
    <input type="text" name="title" placeholder="Name" value="<%= blog.title %>" required><br>
    <input type="text" name="body" placeholder="Email" value="<%= blog.body %>" required><br>
    <input type="text" name="image" placeholder="Age" value="<%= blog.image %>" required><br>
    <button type="submit">Submit</button>
</form>
